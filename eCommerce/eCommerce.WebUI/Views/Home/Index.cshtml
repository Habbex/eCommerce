<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Golden Watch</p>
            <p style="margin-right: auto"></p>
            <div class="list-group">
                <a href="#" class="list-group-item">Category 1</a>
                <a href="#" class="list-group-item">Category 2</a>
                <a href="#" class="list-group-item">Category 3</a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="row carousel-holder">
                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            @{ var i = -1;
                                foreach (var item in Model)
                                {
                                    <li data-target="@(++i)" data-slide-to="0" class="@(i==0? "active":"")"></li>

                                }
                            }

                        </ol>
                        <div class="carousel-inner">
                            @{  var isFirst = true;
                                foreach (var item in Model)
                                {
                                    <div class="item @(isFirst ? "active": "")"
                                         @(isFirst = false)>
                                        <img class="slide-image " src="/images/@item.ImageUrl" alt="Image" style="height:300px;width:800px">
                                    </div>

                                }
                            }


                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>
            </div>

            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</div>

<p style="margin: 2em">
</p>

    @{
        foreach (var item in Model)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">

                    <img class="slide-image " src="/images/@item.ImageUrl" alt="Image" style="height:150px;width:320px" />

                    <div class="caption">
                        <h4 class="pull-right">@String.Format("{0:c}", item.Price)</h4>
                        <h4>
                            <a href="#">@Html.ActionLink(item.Description ?? "Empty Entry", "Details", new { id = item.ProductId })</a>

                        </h4>
                        <p></p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">12 reviews</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                        </p>
                    </div>
                </div>
            </div>

        }
    }



</>


